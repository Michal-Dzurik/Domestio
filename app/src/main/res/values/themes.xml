<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Domestio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        &lt;!&ndash; Secondary brand color. &ndash;&gt;
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->

        <!-- Customize your theme here. -->
        <item name="MainColor">@color/orange</item>
        <item name="BackgroundColor">@color/white</item>
        <item name="ComponentBackgroundColor">@color/white_darker</item>

        <item name="PrimaryTextColor">@color/black</item>
        <item name="SecondaryTextColor">@color/grey</item>
        <item name="PrimaryTextColorTransparent">@color/white_transparent</item>

        <item name="ComponentPrimaryTextColor">@color/white</item>

        <item name="ComponentIconTint">@color/grey_darker</item>

        <!-- Setting colors to android -->
        <item name="android:statusBarColor">?attr/BackgroundColor</item>
        <item name="android:colorBackground">?attr/BackgroundColor</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:colorControlHighlight">@color/ripple_color_dark</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="bottomSheetDialogTheme">@style/MenuDialogTheme</item>

    </style>
    <style name="Theme.Domestio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Domestio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Domestio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Menu Dialog -->

    <style name="MenuDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MenuStyle</item>
    </style>

    <style name="MenuStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/menu_dialog_background</item>
    </style>


</resources>