<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/grey_darker">
    <!-- Use this to define the shape of the ripple effect (rectangle, oval, ring or line). The color specified here isn't used anyway -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/edit_button_radius" />
            <padding android:right="@dimen/edit_button_padding_horizontal"
                android:left="@dimen/edit_button_padding_horizontal"
                android:bottom="@dimen/edit_button_padding_vertical"
                android:top="@dimen/edit_button_padding_vertical"/>
        </shape>
    </item>
    <!-- This is the background for your button -->
    <item>
        <!-- Use the shape you want here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/edit_button_radius" />
            <padding android:right="@dimen/edit_button_padding_horizontal"
                android:left="@dimen/edit_button_padding_horizontal"
                android:bottom="@dimen/edit_button_padding_vertical"
                android:top="@dimen/edit_button_padding_vertical"/>
        </shape>
    </item>
</ripple>